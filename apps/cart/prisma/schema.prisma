generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cart{
  id Int @id @default(autoincrement())
  userId Int?
  session String
  cartItems CartItem[]
}

model CartItem{
  id Int @id @default(autoincrement())
  quantity Int
  cartId Int
  productId Int
  cart Cart @relation(fields: [cartId], references: [id])
}
